<div class="message-info">
  <div class="sender-and-time">
    <div class="sender">
      <!-- 投稿したユーザー名情報を出力する -->
      <%= message.user.name %>
    </div>
    <div class="time">
      <!-- 投稿した時刻を出力する -->
      <%= message.created_at %>
    </div>
  </div>
  <div class="message">
    <!-- 投稿したメッセージ内容を記述する -->
    <%= message.content %>
  </div>
</div>
